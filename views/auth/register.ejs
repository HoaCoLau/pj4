{# views/auth/register.ejs #}
<div class="container">
    <h2><%= title %></h2>
     {# Error messages được hiển thị ở layout #}

    <form action="/auth/register" method="POST">
        <div>
            <label for="name">Tên của bạn:</label>
            <input type="text" id="name" name="name" value="<%= typeof oldInput !== 'undefined' ? oldInput.name : '' %>" required>
        </div>
        <div>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="<%= typeof oldInput !== 'undefined' ? oldInput.email : '' %>" required>
        </div>
        <div>
            <label for="password">Mật khẩu:</label>
            <input type="password" id="password" name="password" required>
        </div>
        {# Có thể thêm confirm password nếu muốn #}
        <button type="submit">Đăng ký</button>
    </form>
    <p>Đã có tài khoản? <a href="/auth/login">Đăng nhập</a>.</p>
</div>