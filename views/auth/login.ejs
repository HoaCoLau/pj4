<%- include('../partials/header', { pageTitle: pageTitle, isAdminPage: false }); %>
<%- include('../partials/navbar'); %>

<div class="container mt-5 pt-4"> <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5 col-xl-4">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-dark text-white text-center">
                    <h4 class="mb-0">Login to Your Account</h4>
                </div>
                <div class="card-body p-4 p-sm-5"> <% if (locals.query && locals.query.registered === 'true') { %>
                         <div class="alert alert-success alert-dismissible fade show alert-auto-dismiss" role="alert">
                            Registration successful! You can now log in.
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                         </div>
                     <% } %>
                    <% if (typeof errors !== 'undefined' && errors && errors.general) { %>
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <%= errors.general %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    <% } %>

                    <form action="/auth/login" method="POST" novalidate>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email address</label>
                            <input type="email"
                                   class="form-control <%= (typeof errors !== 'undefined' && errors && errors.email) ? 'is-invalid' : '' %>"
                                   id="email"
                                   name="email"
                                   value="<%= typeof formData !== 'undefined' ? formData.email : '' %>"
                                   required
                                   aria-describedby="emailHelp">
                            <% if (typeof errors !== 'undefined' && errors && errors.email) { %>
                                 <div class="invalid-feedback"><%= errors.email %></div>
                             <% } %>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input type="password"
                                   class="form-control <%= (typeof errors !== 'undefined' && errors && errors.password) ? 'is-invalid' : '' %>"
                                   id="password" name="password" required>
                             <% if (typeof errors !== 'undefined' && errors && errors.password) { %>
                                 <div class="invalid-feedback"><%= errors.password %></div>
                             <% } %>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">Login</button>
                        </div>
                    </form>
                    <div class="mt-4 text-center">
                        <p class="mb-0">Don't have an account? <a href="/auth/register" class="fw-bold">Register here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

</main> <%- include('../partials/footer'); %>