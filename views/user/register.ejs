<%- include('../partials/header', { title: title }) %>

<h1><%= title %></h1>

<% if (typeof errors !== 'undefined' && errors && errors.general) { %>
    <p style="color: red;"><%= errors.general %></p>
<% } %>

<form action="/auth/register" method="POST">
    <div>
        <label for="name">Tên:</label>
        <input type="text" id="name" name="name" value="<%= typeof formData !== 'undefined' ? formData.name : '' %>" required>
        <% if (typeof errors !== 'undefined' && errors && errors.name) { %><span style="color: red;"><%= errors.name %></span><% } %>
    </div>
    <div>
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" value="<%= typeof formData !== 'undefined' ? formData.email : '' %>" required>
         <% if (typeof errors !== 'undefined' && errors && errors.email) { %><span style="color: red;"><%= errors.email %></span><% } %>
    </div>
    <div>
        <label for="password">Mật khẩu:</label>
        <input type="password" id="password" name="password" required>
         <% if (typeof errors !== 'undefined' && errors && errors.password) { %><span style="color: red;"><%= errors.password %></span><% } %>
    </div>
    <button type="submit">Đăng ký</button>
</form>

<%- include('../partials/footer') %>