<%- include('../layout/header') %>
<body>
  <div class="container mt-5">
    <h1>Edit User</h1>
    <form action="/users/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%= usera.email %>" required>
      </div>
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%= usera.name %>" required>
      </div>
      <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <% if (usera.image) { %>
          <img src="/uploads/<%= usera.image %>" width="100" class="mb-2" alt="Current Image"><br>
        <% } %>
        <input type="file" class="form-control" id="image" name="image">
      </div>
      <button type="submit" class="btn btn-primary">Update</button>
      <a href="/users" class="btn btn-secondary">Cancel</a>
    </form>
  </div>
<%- include('../layout/footer') %>
