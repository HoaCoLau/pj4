<% layout('layouts/user') -%>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h1 class="text-center"><%= title %></h1>
            </div>
            <div class="card-body">
                <% if (query && query.error) { %>
                    <div class="alert alert-danger"><%= query.error %></div>
                <% } %>

                <form action="/auth/signup" method="POST">
                    <div class="mb-3">
                        <label for="name" class="form-label">Tên:</label>
                        <input type="text" class="form-control" id="name" name="name" required value="<%= query.name || '' %>">
                    </div>
                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" class="form-control" id="email" name="email" required value="<%= query.email || '' %>">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Mật khẩu:</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-user-plus"></i> Đăng ký</button>
                    </div>
                </form>
                <p class="text-center mt-3">Đã có tài khoản? <a href="/auth/signin">Đăng nhập ngay!</a></p>
            </div>
        </div>
    </div>
</div>
