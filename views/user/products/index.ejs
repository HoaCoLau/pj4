<% layout('layouts/user') -%>

<h1><%= title %></h1>

{# Form lọc và tìm kiếm #}
<form action="/products" method="GET" class="row g-3 align-items-center mb-4">
    <div class="col-md-4">
        <label for="name" class="visually-hidden">Tìm kiếm</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Tìm kiếm sản phẩm..." value="<%= searchTerm %>">
    </div>
    <div class="col-md-4">
        <label for="categoryId" class="visually-hidden">Danh mục</label>
        <select class="form-select" id="categoryId" name="categoryId">
            <option value="">Tất cả danh mục</option>
            <% categories.forEach(category => { %>
                <option value="<%= category.id %>" <%= selectedCategoryId && parseInt(selectedCategoryId) === category.id ? 'selected' : '' %>><%= category.name %></option>
            <% }); %>
        </select>
    </div>
    <div class="col-md-auto">
        <button type="submit" class="btn btn-primary"><i class="fas fa-search"></i> Lọc/Tìm kiếm</button>
        <a href="/products" class="btn btn-secondary ms-2"><i class="fas fa-sync"></i> Reset</a>
    </div>
</form>


<div class="row">
    <% if (products && products.length > 0) { %>
        <% products.forEach(product => { %>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <img src="<%= (product && product.image_url) ? product.image_url : '/images/placeholder.png' %>" class="card-img-top" alt="<%= product ? product.name : 'Sản phẩm' %>">
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title"><%= product ? product.name : 'Sản phẩm không tên' %></h5>
                        {# Ép kiểu sang số trước khi gọi toFixed #}
                        <p class="card-text"><strong>Giá:</strong> <%= (product && product.price !== null && product.price !== undefined) ? parseFloat(product.price).toFixed(2) : 'N/A' %> VND</p>
                        <p class="card-text"><small class="text-muted">Danh mục: <%= (product && product.category) ? product.category.name : 'N/A' %></small></p>
                        <div class="mt-auto">
                             <a href="/products/<%= product ? product.id : '#' %>" class="btn btn-primary btn-sm me-2"><i class="fas fa-eye"></i> Chi tiết</a>
                             <% if (user && product && product.id) { %>
                                 <form action="/user/cart/add" method="POST" style="display:inline;">
                                     <input type="hidden" name="product_id" value="<%= product.id %>">
                                     <input type="hidden" name="quantity" value="1">
                                     <button type="submit" class="btn btn-success btn-sm"><i class="fas fa-cart-plus"></i> Thêm vào giỏ</button>
                                 </form>
                             <% } %>
                        </div>
                    </div>
                </div>
            </div>
        <% }); %>
    <% } else { %>
        <div class="col-12">
            <p>Không tìm thấy sản phẩm nào phù hợp.</p>
        </div>
    <% } %>
</div>

