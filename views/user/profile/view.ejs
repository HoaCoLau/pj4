<% layout('layouts/user') -%>

<h1><%= title %></h1>

<div class="card">
    <div class="card-body">
        <% if (user && user.image) { %>
            <div class="text-center mb-3">
                <img src="<%= user.image %>" alt="<%= user.name %>" class="img-thumbnail rounded-circle" style="width: 150px; height: 150px; object-fit: cover;">
            </div>
        <% } %>
        <p><strong>ID:</strong> <%= user.id %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
        <p><strong>Tên:</strong> <%= user.name %></p>
        <p><strong>Vai trò:</strong> <span class="badge <%= user.role === 'admin' ? 'bg-danger' : 'bg-secondary' %>"><%= user.role %></span></p>

        <div class="mt-3">
            <a href="/user/profile/edit" class="btn btn-primary me-2"><i class="fas fa-edit"></i> Chỉnh sửa thông tin</a>
        </div>
    </div>
</div>
