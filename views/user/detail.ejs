<%- include('../layout/header') %>
<body>
  <div class="container mt-5">
    <h1>User Detail</h1>
    <div class="card">
      <div class="card-body">
        <p><strong>Email:</strong> <%= usera.email %></p>
        <p><strong>Name:</strong> <%= usera.name %></p>
        <p><strong>Image:</strong></p>
        <% if (usera.image) { %>
          <img src="/uploads/<%= usera.image %>" width="120" alt="User Image">
        <% } else { %>
          <p>No image available</p>
        <% } %>
        <br><br>
        <a href="/users" class="btn btn-secondary mt-3">Back to List</a>
      </div>
    </div>
  </div>
<%- include('../layout/footer') %>
