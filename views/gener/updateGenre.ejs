<%- include('../layout/header') %>
  <div class="container mt-5">
    <h1 class="text-center mb-4">Edit Genre</h1>
    <form action="/genres/<%= oldInput?.id %>?_method=PUT" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Genre Name</label>
        <input type="text" class="form-control <% if (errorObj.name) { %>is-invalid<% } %>" id="name" name="name" value="<%= oldInput?.name || '' %>" >
        <% if (errorObj.name) { %>
          <div class="invalid-feedback">
            <%= errorObj.name %>
          </div>
        <% } %>
      </div>
      <button type="submit" class="btn btn-primary">Update Genre</button>
      <a href="/genres" class="btn btn-secondary">Cancel</a>
    </form>
  </div>
  <%- include(../'layout/footer') %>