<%- include('../../partials/header', { pageTitle: pageTitle, isAdminPage: false }); %>
<%- include('../../partials/navbar'); %>

<main role="main" class="container-fluid flex-grow-1 py-3">
<div class="container mt-4">
    <div class="row">
        <div class="col-lg-3 mb-4">
            <div class="card shadow-sm">
                <div class="card-header">
                    <h5 class="mb-0">
                        <span data-feather="filter" class="align-text-bottom me-1"></span> Bộ Lọc
                    </h5>
                </div>
                <div class="card-body">
                    <h6>Danh Mục</h6>
                    <div class="list-group list-group-flush">
                        <a href="/products<%= searchQuery ? '?search=' + encodeURIComponent(searchQuery) : '' %><%= sortOrder ? (searchQuery ? '&' : '?') + 'sort=' + sortOrder : '' %>"
                           class="list-group-item list-group-item-action <%= !selectedCategory ? 'active' : '' %>">
                            Tất cả Danh mục
                        </a>
                        <% if (typeof categories !== 'undefined' && categories.length > 0) { %>
                            <% categories.forEach(category => { %>
                                <a href="/products?category=<%= encodeURIComponent(category.name) %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %><%= sortOrder ? '&sort=' + sortOrder : '' %>"
                                   class="list-group-item list-group-item-action <%= selectedCategory === category.name ? 'active' : '' %>">
                                    <%= category.name %>
                                </a>
                            <% }) %>
                        <% } %>
                    </div>
                </div>
                </div>
        </div>

        <div class="col-lg-9">
            <div class="d-flex flex-wrap justify-content-between align-items-center mb-3 pb-2 border-bottom">
                <h2 class="h3 mb-0"><%= pageTitle %></h2>
                <div class="d-flex align-items-center">
                    <form action="/products" method="GET" class="d-inline-flex me-2 input-group input-group-sm" style="max-width: 250px;">
                        <% if (selectedCategory) { %><input type="hidden" name="category" value="<%= selectedCategory %>"><% } %>
                        <% if (sortOrder) { %><input type="hidden" name="sort" value="<%= sortOrder %>"><% } %>
                        <input type="text" name="search" class="form-control" placeholder="Tìm sản phẩm..." value="<%= searchQuery || '' %>" aria-label="Search products">
                        <button type="submit" class="btn btn-outline-secondary">
                            <span data-feather="search"></span>
                        </button>
                    </form>
                    <select class="form-select form-select-sm" style="width: auto;"
                            onchange="location = this.value;">
                        <option value="/products?<%= selectedCategory ? 'category=' + encodeURIComponent(selectedCategory) : '' %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>&sort=newest" <%= sortOrder === 'newest' ? 'selected' : '' %>>Sắp xếp: Mới nhất</option>
                        <option value="/products?<%= selectedCategory ? 'category=' + encodeURIComponent(selectedCategory) : '' %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>&sort=price_asc" <%= sortOrder === 'price_asc' ? 'selected' : '' %>>Giá: Thấp đến Cao</option>
                        <option value="/products?<%= selectedCategory ? 'category=' + encodeURIComponent(selectedCategory) : '' %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %>&sort=price_desc" <%= sortOrder === 'price_desc' ? 'selected' : '' %>>Giá: Cao đến Thấp</option>
                    </select>
                </div>
            </div>

            <% if (typeof products !== 'undefined' && products.length > 0) { %>
                <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4 product-grid">
                    <% products.forEach(product => { %>
                        <div class="col">
                            <div class="card h-100 shadow-sm">
                                <a href="/products/<%= product.id %>">
                                    <img src="<%= product.imageUrl || '/images/placeholder.png' %>" class="card-img-top" alt="<%= product.name %>">
                                </a>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title fs-6">
                                        <a href="/products/<%= product.id %>" class="text-decoration-none text-dark stretched-link"><%= product.name %></a>
                                    </h5>
                                    <% if (product.category) { %>
                                        <p class="card-text text-muted small mb-1"><%= product.category.name %></p>
                                    <% } %>
                                    <p class="card-text fw-bold mt-auto mb-2"><%= new Intl.NumberFormat('vi-VN', { style: 'currency', currency: 'VND' }).format(product.price) %></p>
                                </div>
                                 <div class="card-footer bg-transparent border-top-0 p-3">
                                     <a href="/products/<%= product.id %>" class="btn btn-sm btn-outline-primary w-100 mb-1">Xem Chi Tiết</a>
                                     </div>
                            </div>
                        </div>
                    <% }) %>
                </div>

                <% if (totalPages > 1) { %>
                    <nav aria-label="Product navigation" class="mt-4 pt-3 border-top">
                        <ul class="pagination justify-content-center">
                            <li class="page-item <%= currentPage <= 1 ? 'disabled' : '' %>">
                                <a class="page-link" href="/products?page=<%= currentPage - 1 %><%= selectedCategory ? '&category=' + encodeURIComponent(selectedCategory) : '' %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %><%= sortOrder ? '&sort=' + sortOrder : '' %>">Previous</a>
                            </li>
                            <% for (let i = 1; i <= totalPages; i++) { %>
                                <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                    <a class="page-link" href="/products?page=<%= i %><%= selectedCategory ? '&category=' + encodeURIComponent(selectedCategory) : '' %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %><%= sortOrder ? '&sort=' + sortOrder : '' %>"><%= i %></a>
                                </li>
                            <% } %>
                            <li class="page-item <%= currentPage >= totalPages ? 'disabled' : '' %>">
                                <a class="page-link" href="/products?page=<%= currentPage + 1 %><%= selectedCategory ? '&category=' + encodeURIComponent(selectedCategory) : '' %><%= searchQuery ? '&search=' + encodeURIComponent(searchQuery) : '' %><%= sortOrder ? '&sort=' + sortOrder : '' %>">Next</a>
                            </li>
                        </ul>
                    </nav>
                <% } %>

            <% } else { %>
                <div class="alert alert-info text-center mt-4" role="alert">
                    Không tìm thấy sản phẩm nào phù hợp với tiêu chí của bạn.
                </div>
            <% } %>
        </div>
    </div>
</div>
</main>
<%- include('../../partials/footer'); %>