{# views/admin/products/create.ejs #}
<div class="container admin-form">
    <h2><%= title %></h2>
     {# Error messages được hiển thị ở layout #}

    <form action="/admin/products/create" method="POST" enctype="multipart/form-data"> {# Thêm enctype cho upload file #}
        <div>
            <label for="name">Tên Sản phẩm:</label>
            <input type="text" id="name" name="name" value="<%= typeof oldInput !== 'undefined' ? oldInput.name : '' %>" required>
        </div>
        <div>
            <label for="price">Giá:</label>
            <input type="number" id="price" name="price" step="0.01" value="<%= typeof oldInput !== 'undefined' ? oldInput.price : '' %>" required>
        </div>
        <div>
            <label for="category_id">Danh mục:</label>
            <select id="category_id" name="category_id">
                <option value="">-- Chọn danh mục --</option>
                <% categories.forEach(category => { %>
                    <option value="<%= category.id %>" <%= typeof oldInput !== 'undefined' && oldInput.category_id == category.id ? 'selected' : '' %>>
                        <%= category.name %>
                    </option>
                <% }); %>
            </select>
        </div>
        <div>
            <label for="description">Mô tả:</label>
            <textarea id="description" name="description"><%= typeof oldInput !== 'undefined' ? oldInput.description : '' %></textarea>
        </div>
         <div>
             <label for="image">Ảnh sản phẩm:</label>
             <input type="file" id="image" name="image" accept="image/*"> {# Chấp nhận file ảnh #}
         </div>
        <div>
            <label for="stock_quantity">Số lượng tồn kho:</label>
            <input type="number" id="stock_quantity" name="stock_quantity" min="0" value="<%= typeof oldInput !== 'undefined' ? oldInput.stock_quantity : '' %>" required>
        </div>
        <button type="submit">Thêm Sản phẩm</button>
        <a href="/admin/products" class="button">Hủy</a>
    </form>
</div>