{# views/admin/categories/create.ejs #}
<div class="container admin-form">
    <h2><%= title %></h2>
    {# Error messages được hiển thị ở layout #}

    <form action="/admin/categories/create" method="POST">
        <div>
            <label for="name">Tên Danh mục:</label>
            <input type="text" id="name" name="name" value="<%= typeof oldInput !== 'undefined' ? oldInput.name : '' %>" required>
        </div>
        <button type="submit">Thêm Danh mục</button>
         <a href="/admin/categories" class="button">Hủy</a>
    </form>
</div>