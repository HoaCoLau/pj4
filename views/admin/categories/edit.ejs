<div class="container admin-form">
    <h2><%= title %></h2>

    <form action="/admin/categories/edit/<%= category.id %>" method="POST">
        <div>
            <label for="name">Tên Danh mục:</label>
            <input type="text" id="name" name="name" value="<%= typeof oldInput !== 'undefined' ? oldInput.name : category.name %>" required>
        </div>
        <button type="submit">Cập nhật Danh mục</button>
         <a href="/admin/categories" class="button">Hủy</a>
    </form>
</div>