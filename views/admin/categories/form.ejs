<%# layout('admin/layouts/main') %>

<form method="POST" action="/admin/categories/save/<%= typeof categoryData !== 'undefined' && categoryData.id ? categoryData.id : '' %>">
    <div class="mb-3">
        <label for="name" class="form-label">Tên Danh mục</label>
        <input type="text" class="form-control <%= (locals.errors && errors.name) ? 'is-invalid' : '' %>" id="name" name="name" value="<%= typeof categoryData !== 'undefined' && categoryData.name ? categoryData.name : '' %>" required>
        <% if (locals.errors && errors.name) { %>
            <div class="invalid-feedback"><%= errors.name %></div>
        <% } %>
    </div>

    <% if (locals.errors && errors.general) { %>
        <div class="alert alert-danger"><%= errors.general %></div>
    <% } %>

    <button type="submit" class="btn btn-primary"><%= (typeof categoryData !== 'undefined' && categoryData.id) ? 'Cập nhật' : 'Thêm mới' %></button>
    <a href="/admin/categories" class="btn btn-secondary">Hủy</a>
</form>