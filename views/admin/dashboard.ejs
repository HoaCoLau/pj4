<% layout('layouts/user') -%>

<div class="row justify-content-center">
    <div class="col-md-6">
         <div class="card">
            <div class="card-header">
                <h1 class="text-center"><%= title %></h1>
            </div>
            <div class="card-body">
                <% if (query && query.error) { %>
                    <div class="alert alert-danger"><%= query.error %></div>
                <% } %>
                <% if (query && query.success) { %>
                    <div class="alert alert-success"><%= query.success %></div>
                <% } %>

                <form action="/auth/signin" method="POST">
                    <div class="mb-3">
                        <label for="email" class="form-label">Email:</label>
                        <input type="email" class="form-control" id="email" name="email" required value="<%= query.email || '' %>">
                    </div>
                    <div class="mb-3">
                        <label for="password" class="form-label">Mật khẩu:</label>
                        <input type="password" class="form-control" id="password" name="password" required>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary"><i class="fas fa-sign-in-alt"></i> Đăng nhập</button>
                    </div>
                </form>
                <p class="text-center mt-3">Chưa có tài khoản? <a href="/auth/signup">Đăng ký ngay!</a></p>
            </div>
        </div>
    </div>
</div>
