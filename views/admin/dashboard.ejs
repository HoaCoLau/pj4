<% layout('layouts/admin') -%>

<h1><%= title %></h1>

<p>Chào mừng bạn đến với bảng điều khiển Admin.</p>

<div class="row mt-4">
    <div class="col-md-4 mb-4">
        <div class="card text-white bg-primary">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-box"></i> Tổng số Sản phẩm</h5>
                <p class="card-text display-4"><%= productCount %></p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card text-white bg-success">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-shopping-cart"></i> Tổng số Đơn hàng</h5>
                <p class="card-text display-4"><%= orderCount %></p>
            </div>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="card text-white bg-info">
            <div class="card-body">
                <h5 class="card-title"><i class="fas fa-users"></i> Tổng số Người dùng</h5>
                <p class="card-text display-4"><%= userCount %></p>
            </div>
        </div>
    </div>
</div>
