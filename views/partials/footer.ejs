    <script>
      // Khởi tạo Feather Icons sau khi DOM đã tải
      document.addEventListener('DOMContentLoaded', function() {
        if (typeof feather !== 'undefined') {
            feather.replace(); // Kích hoạt Feather Icons
        }
      });

      // Hàm xác nhận xóa dùng chung cho các form delete
      function confirmDelete(event) {
          if (!confirm('Bạn có chắc chắn muốn xóa mục này? Hành động này không thể hoàn tác.')) {
              event.preventDefault(); // Ngăn form submit nếu user chọn "Cancel"
          }
      }

      // Tự động ẩn các alert thông báo sau một khoảng thời gian
      document.addEventListener('DOMContentLoaded', () => {
        const autoDismissAlerts = document.querySelectorAll('.alert-auto-dismiss');
        autoDismissAlerts.forEach(alert => {
            setTimeout(() => {
                // Kiểm tra xem bootstrap Alert instance đã được khởi tạo chưa
                const alertInstance = bootstrap.Alert.getInstance(alert);
                if (alertInstance) {
                    alertInstance.close();
                } else if (alert.classList.contains('show')) { // Kiểm tra nếu alert vẫn hiển thị
                    // Nếu chưa, tự tạo mới và đóng (cho trường hợp không có JS tương tác khác)
                    new bootstrap.Alert(alert); // Khởi tạo để có thể close
                    alert.classList.remove('show'); // Ẩn thủ công nếu cần
                }
            }, 3500); // Thời gian hiển thị là 3.5 giây
        });
      });
    </script>

